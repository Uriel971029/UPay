<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre Alumno"
        android:textSize="21sp"
        android:textColor="#f65034"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:cropToPadding="false"
        android:src="@drawable/ic_user_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/matricula"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:adjustViewBounds="true" />


    <TextView
        android:id="@+id/matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula:"
        android:layout_below="@+id/alumno"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/cuatrimestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cuatrimestre:"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/alumno"
        android:layout_toRightOf="@+id/matricula"
        android:layout_toEndOf="@+id/matricula" />

    <TextView
        android:id="@+id/grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="grupo:"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/alumno"
        android:layout_toRightOf="@+id/cuatrimestre"
        android:layout_toEndOf="@+id/cuatrimestre" />

    <TextView
        android:id="@+id/carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="carrera:"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/alumno"
        android:layout_toRightOf="@+id/grupo"
        android:layout_toEndOf="@+id/grupo" />


</RelativeLayout>